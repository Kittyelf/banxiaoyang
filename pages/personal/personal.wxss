page {
    background: #eee;
}

.container {
    padding: 3%;
}

.main {
    border-radius: 10rpx;
    background: #fff;
    padding: 0 30rpx;
}
.head {
    line-height: 5 !important;
}
.data {
    border-bottom: 2rpx solid #e8e8e8;
    font-size: 30rpx;
    color: #aaa;
    display: flex;
    align-items: center;
    line-height: 4;
    position: relative;
    justify-content: space-between;
    padding-right: 30rpx;
}
.main-arrow {
    width: 12rpx;
    height: 23rpx;
    position: absolute;
    left: 98%;
    top: 50%;
    transform: translateY(-50%);
}
.main-head {
    border-radius: 50%;
    width: 107rpx;
    height: 107rpx;
    overflow: hidden;
}
.bottom {
    border: 0;
}
.mask{
    position: fixed;
    bottom: 0;
    width: 94%;
    z-index: 100;
}
.mask-sex {
    border-radius: 24rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    line-height: 2.5;
    background: #fff
}
.mask-choice {
    color: #8f8f8f;
    font-size: 30rpx;
    line-height: 3;
}
.sex {
    font-size: 44rpx;
    color: #007AFF;
    width: 100%;
    text-align: center;
}
.bg{
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    overflow: hidden;
    outline: 0;
    -webkit-overflow-scrolling: touch;
    background-color: rgba(0, 0, 0, 0.4);
    z-index: 10;
}
.man {
    border-top: 2rpx solid #eee;
    border-bottom: 2rpx solid #eee;
}
.cancel {
    display: flex;
    justify-content: center;
    font-size: 44rpx;
    color: #007AFF;
    background: #fff;
    border-radius: 24rpx;
    line-height: 2.5;
    margin: 20rpx 0;
    font-weight: 700;
}