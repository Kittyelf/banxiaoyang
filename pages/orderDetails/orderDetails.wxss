@import '/details.wxss';
page {
    background: #eee;
}
.container {
    width: 100%;
    padding: 23rpx 20rpx 0;
}

.logistics {
    background: #F44D23;
    border-top-left-radius: 8rpx;
    border-top-right-radius: 8rpx;
    display: flex;
    align-items: center;
    padding: 20rpx;
}
.logistics image {
    width: 100rpx;
    height: 80rpx;
    margin: 30rpx;
}
.logistics-right {
    display: flex;
    flex-direction: column;
    color: #fffefe;
}
.logistics-right-state {
    font-size: 30rpx;
    line-height: 2;
}
.logistics-right-wuliu {
    font-size: 24rpx;
    line-height: 2;
}

.address {
    background: #fff;
    display: flex;
    align-items: center;
    margin-bottom: 20rpx;
    line-height: 2;
    padding: 50rpx 20rpx 30rpx;
    position: relative;
    box-sizing: border-box;
    width: 100%
}
.address-dingwei {
    width: 27rpx;
    height: 33rpx;
    margin-right: 22rpx;
}
.address-content {
    width: 90%;
}
.address-content-top {
    font-size: 30rpx;
    color: #333;
    display: flex;
}
.address-content-top-name {
    padding-right: 40rpx;
    max-width: 360rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.address-content-bottom {
    font-size: 28rpx;
    color: #9e9e9e;
    display: flex;
    align-items: center;
    justify-content: space-between
}
.address-right {
    width: 12rpx;
    height: 23rpx;
    position: absolute;
    bottom: 30rpx;
    right: 20rpx;
}
.address-top {
    position: absolute;
    top: 0;
    height: 20rpx;
    width: 100%;
    left: 0;
}

.content-title {
    align-items: center;
    justify-content: flex-start
}
.content-title-left {
    font-size: 30rpx;
    color: #333;
    margin-left: 17rpx;
}
.content-title image {
    width: 32rpx;
    height: 32rpx;
}
.content-main {
    border-bottom: 0;
    padding-left: 15rpx;
}
.content-button {
    padding-top: 0
}

.state {
    font-size: 24rpx;
    color: #878787;
    border-bottom-left-radius: 8rpx;
    border-bottom-right-radius: 8rpx;
    background: #fff;
    display: flex;
    flex-direction: column;
    line-height: 2;
    padding: 17rpx;
}

.fixed {
    position: fixed;
    width: 100%;
    bottom: 0;
    color: #fff;
    background: #E94718;
    line-height: 3;
    border-radius: 0;
}