<view class="container">
    <view class="main">
        <view class="data">
            <view class="data-content">
                <image class="data-content-phone" src="../../image/password/phone.png"></image>
            </view>
            <input type="number" placeholder="请输入手机号" placeholder-style="color: #aaa"/>
            <text class="obtain">获取验证码</text>
        </view>
        <view class="data">
            <view class="data-content">
                <image class="data-content-code" src="../../image/password/code.png"></image>
            </view>
            <input type="number" placeholder="请输入验证码" placeholder-style="color: #aaa" />
            <text class="data-content-text">60s</text>
        </view>
        <view class="data bottom">
            <view class="data-content">
                <image class="data-content-password" src="../../image/password/password.png"></image>
            </view>
            <input type="text" placeholder="请输入新密码" placeholder-style="color: #aaa" />
        </view>
    </view>
    <button class="quit">确认</button>
    <button class="cancel" bindtap="back">取消</button>
</view>